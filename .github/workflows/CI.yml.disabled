name: "PRtify CI"

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - '*'

permissions:
  contents: read

jobs:
  Test:
    name: Run test
    runs-on: macos-13
    strategy:
      fail-fast: false

    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Setup tuist
        uses: tuist/tuist-action@0.13.0
        with:
          command: 'fetch'
          arguments: ''
      
      - name: Build using tuist
        uses: tuist/tuist-action@0.13.0
        with:
          command: 'build'
          arguments: ''
